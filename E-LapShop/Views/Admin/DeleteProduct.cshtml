@using BLL.Models.ProductDtos
@model ProductDto
@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3><i class="fas fa-exclamation-triangle me-2"></i>Confirm Product Deletion</h3>
                </div>
                <div class="card-body p-4">

                    <!-- Product Information -->
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height: 200px;">
                        }
                        <h4 class="text-danger mb-2">@Model.Name</h4>
                        <p class="text-muted mb-3">@Model.Description</p>
                        <div class="row">
                            <div class="col-6">
                                <strong>Price:</strong> <span class="text-success">@Model.Price.ToString("C")</span>
                            </div>
                            <div class="col-6">
                                <strong>Stock:</strong> <span class="badge bg-info">@Model.Stock</span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning text-center mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> This product will be permanently deleted and cannot be recovered!
                    </div>

                    <!-- Simplified Delete Form -->
                    <form method="post" asp-controller="Admin" asp-action="DeleteProductConfirmed" id="deleteForm">
                        <input type="hidden" name="id" value="@Model.Id" />
                        @Html.AntiForgeryToken()
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-lg me-3" id="confirmDeleteBtn">
                                <i class="fas fa-trash me-2"></i>Yes, Delete Product
                            </button>
                            <a href="@Url.Action("Products", "Admin")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        console.log('Delete page loaded, product ID: @Model.Id');
        
        // Monitor form submission
        $('#deleteForm').on('submit', function(e) {
            console.log('Form submit event triggered');
            var productName = '@Html.Raw(Model.Name.Replace("'", "\\'"))';
            
            // Prevent default submission for confirmation first
            e.preventDefault();
            
            // First confirmation
            if (confirm('Are you sure you want to delete the product "' + productName + '"?')) {
                console.log('First confirmation accepted');
                // Second confirmation
                if (confirm('Warning: This action cannot be undone!\n\nDo you want to continue?')) {
                    console.log('Second confirmation accepted, submitting form');
                    
                    // Show loading indicator
                    $('#confirmDeleteBtn').html('<i class="fas fa-spinner fa-spin me-2"></i>Deleting...');
                    $('#confirmDeleteBtn').prop('disabled', true);
                    
                    console.log('Form action:', $(this).attr('action'));
                    console.log('Form method:', $(this).attr('method'));
                    console.log('Product ID:', $('input[name="id"]').val());
                    
                    // Actually submit the form
                    this.submit();
                } else {
                    console.log('Second confirmation cancelled');
                }
            } else {
                console.log('First confirmation cancelled');
            }
        });
    });
</script>


<style>
    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }
    
    .border-danger {
        border-color: #dc3545 !important;
        border-width: 2px !important;
    }
    
    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.125rem;
    }
    
    .card {
        border-radius: 0.5rem;
    }
    
    .alert {
        border-radius: 0.375rem;
    }
</style>
}
