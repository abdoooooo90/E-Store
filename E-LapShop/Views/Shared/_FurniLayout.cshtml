    <script>
        // Dark Mode Functionality
        function initDarkMode() {
            // Check if dark mode is saved in localStorage
            const isDarkMode = localStorage.getItem('darkMode') === 'true';
            
            if (isDarkMode) {
                enableDarkMode();
            } else {
                disableDarkMode();
            }
        }

        function enableDarkMode() {
            document.body.classList.add('dark-mode');
            $('#darkModeIcon').removeClass('fa-moon').addClass('fa-sun');
            $('#darkModeText').text('الوضع النهاري');
            localStorage.setItem('darkMode', 'true');
        }

        function disableDarkMode() {
            document.body.classList.remove('dark-mode');
            $('#darkModeIcon').removeClass('fa-sun').addClass('fa-moon');
            $('#darkModeText').text('الوضع الليلي');
            localStorage.setItem('darkMode', 'false');
        }

        function toggleDarkMode() {
            if (document.body.classList.contains('dark-mode')) {
                disableDarkMode();
            } else {
                enableDarkMode();
            }
        }

        // Update cart and wishlist count on page load
        $(document).ready(function() {
            // Initialize dark mode
            initDarkMode();

            // Dark mode toggle event
            $('#darkModeToggle').click(function(e) {
                e.preventDefault();
                toggleDarkMode();
            });

            // Update cart count
            if (typeof updateCartCount === 'function') {
                updateCartCount();
            } else {
                // Fallback if updateCartCount is not defined
                $.get('/Cart/GetCartCount')
                    .done(function(response) {
                        $('#cart-count').text(response.count);
                        if (response.count > 0) {
                            $('#cart-count').show();
                        } else {
                            $('#cart-count').hide();
                        }
                    });
            }
            
            // Update wishlist count
            if (typeof updateWishlistCount === 'function') {
                updateWishlistCount();
            } else {
                // Fallback if updateWishlistCount is not defined
                $.get('/Wishlist/GetCount')
                    .done(function(response) {
                        $('#wishlist-count').text(response.count);
                        if (response.count > 0) {
                            $('#wishlist-count').show();
                        } else {
                            $('#wishlist-count').hide();
                        }
                    });
            }
        });
    </script>
