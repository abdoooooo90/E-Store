@model IEnumerable<BLL.Models.ProductDtos.ProductDto>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Our Products</h1>
            <p class="lead fw-normal text-white-50 mb-0">Browse and shop your favorite items</p>
        </div>
    </div>
</header>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        @* زر Create يظهر فقط للـ Admin *@
        @if (User.IsInRole("Admin"))
        {
            <div class="mb-4 text-end">
                <a asp-action="Create" class="btn btn-primary">Create New Product</a>
            </div>
        }

        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var product in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <img class="card-img-top" src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "https://dummyimage.com/450x300/dee2e6/6c757d.jpg")" alt="@product.Name" />
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bolder">@product.Name</h5>
                                <span class="text-muted">@product.Description</span>
                                <div class="mt-2 fw-bold">@product.Price.ToString("F2") EGP</div>
                            </div>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent text-center">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-dark mt-auto">View Details</a>

                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning mt-2">Edit</a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mt-2">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>